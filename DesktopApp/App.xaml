<Application x:Class="DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel = "clr-namespace:DesktopApp.ViewModel"
             xmlns:view = "clr-namespace:DesktopApp.View"
             
             xmlns:local="clr-namespace:DesktopApp">

    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel  }">
            <view:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:CoursesViewModel  }">
            <view:CoursesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:GroupsViewModel  }">
            <view:GroupsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:StudentsViewModel  }">
            <view:StudentsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:TeachersViewModel  }">
            <view:TeachersView/>
        </DataTemplate>

    </Application.Resources>
</Application>
